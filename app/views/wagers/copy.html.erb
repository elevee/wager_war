<h2>Create a Wager</h2>

<%= form_for @wager, url: {action: "create"}, html: {class: ""} do |f| %>
  <fieldset>
  <legend>Create a wager</legend>

  	<div class="row">
      <div class="large-12 columns">
      	<label>Title</label>
  			<%= f.text_field :title, placeholder: "The Bet To End All Bets" %>
  		</div>
  	</div>

  	<div class="row">
  		<div class="large-4 columns">
  			<label>With</label>
  				<%= f.text_field :guest, placeholder: "Choose a Friend" %>
  		</div>
  		<div class="large-8 columns">
  		</div>
  	</div>

  	<div class="row">
			<div class="large-12 columns">
        <label>Description</label>
        <%= f.text_area :description, size: "60x12", placeholder: "What's all this about?" %>
      </div>
  	</div>

  	<div class="row">  
      <div class="large-12 columns">
        <div class="row collapse">
          <h4>Terms</h4>
				</div>
	  	</div>
	  </div>

		<%= fields_for @terms do |fa| %>
      
   	


	  <div class="row">	
	  	<div class="large-6 columns host_terms">
        <div class="row collapse">
          <label>For You To Win (max: 4)</label>
          <div class="large-11 columns">
      	  	<%= fa.label :criterion %>
      			<%= fa.text_field :criterion, placeholder: "You have to do it naked" %>
          </div>
          <div class="large-1 columns">
          	<a href="#" class="button small host_add_button">+</a>
          </div>
				</div>


      <div class="large-5 columns">
        <div class="row collapse">
        	<label>For Them To Win (max: 4)</label>
          <div class="large-11 columns">
            <%= fa.label :criterion %>
      			<%= fa.text_field :criterion, placeholder: "You have to do it naked" %>
          </div>
          <div class="large-1 columns">
          	<a href="#" class="button small guest_add_button">+</a>
      		</div>
      	</div>

      </div>
    </div>
				<% end %>

  <%= f.submit "Create Stub" %>
	</fieldset>
<% end %>



